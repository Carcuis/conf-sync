{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "blocks": [
    {
      "type": "rprompt",
      "alignment": "right",
      "segments": [
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "",
          "invert_powerline": true,
          "foreground": "#100e23",
          "background": "#3776ab",
          "template": "{{ if .Error }}{{ .Error }}{{ else }}{{ if .Env.VIRTUAL_ENV }}{{ else }} <#43b049></>{{ end }} <#ffbc03></> {{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
          "properties": {
            "display_mode": "environment",
            "fetch_virtual_env": true,
            "home_enabled": true
          }
        },
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "",
          "invert_powerline": true,
          "foreground": "#0097de",
          "background": "#19323e",
          "template": "{{if .Env.ALL_PROXY}}  {{ .Env.ALL_PROXY }} {{ end }}"
        },
        {
          "type": "status",
          "style": "powerline",
          "powerline_symbol": "",
          "invert_powerline": true,
          "foreground": "#d6d6d6",
          "background": "#000000",
          "background_templates": [
            "{{ if gt .Code 0 }}#6e1111{{ end }}"
          ],
          "template": " {{ if gt .Code 0 }} {{ .Meaning }}{{ else }}{{ end }} ",
          "properties": {
            "always_enabled": true,
            "display_exit_code": true
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "",
          "invert_powerline": true,
          "foreground": "#5391f0",
          "background": "#1A2429",
          "template": " {{ .FormattedMs }} ",
          "properties": {
            "threshold": 1
          }
        },
        {
          "type": "battery",
          "style": "powerline",
          "powerline_symbol": "",
          "invert_powerline": true,
          "foreground": "#193549",
          "background": "#ffeb3b",
          "background_templates": [
            "{{ if eq \"Full\" .State.String }}#2e9732{{ end }}",
            "{{ if eq \"Charging\" .State.String }}#40c4ff{{ end }}",
            "{{ if eq \"Discharging\" .State.String }}#5391f0{{ end }}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }} "
        },
        {
          "type": "time",
          "style": "diamond",
          "invert_powerline": true,
          "foreground": "#5391f0",
          "background": "#1A2429",
          "template": " {{ .CurrentDate | date .Format }}  ",
          "properties": {
            "time_format": "15:04"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#0099FF",
          "background": "#1A2429",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}}<#888888> </>",
          "properties": {
            "windows": "<#d6d6d6></>"
          }
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "#0099FF",
          "background": "#1A2429",
          "template": " "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#0099FF",
          "background": "#1A2429",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_icon": "",
            "home_icon": " ~",
            "max_width": "{{ .Env.OHMYPOSH_MAX_PATH_LENGTH }}",
            "style": "powerlevel"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#00ff22",
          "background": "#1A2429",
          "template": "<#888888></> {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }} ",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_bare_info": true,
            "branch_icon": " ",
            "branch_identical_icon": "",
            "branch_ahead_icon": "⇡",
            "branch_behind_icon": "⇣",
            "branch_gone_icon": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#1A2429",
          "background": "transparent",
          "template": " "
        }
      ]
    }
  ]
}
